[
    {
        "uuid": "77afd262849e080a87bd0f75dc800f3b",
        "title": "偈",
        "author": "释方会",
        "content": "踏着秤锤硬似铁，痖子得梦向谁说。\n须弥顶上浪滔天，大洋海裏遭火爇。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "49fb0471a3268fca61209da01704d6c7",
        "title": "偈二首  其一",
        "author": "释方会",
        "content": "杨歧一要，千圣同妙。\n布施大众，果然失照。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "3b49aac2416cdafdd76bba56ab9a81b7",
        "title": "偈二首  其二",
        "author": "释方会",
        "content": "杨歧一句，急着眼觑。\n长连床上，拈匙把筯。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "4c716e9b26d1dd0791d0b2ce0cc8d653",
        "title": "偈",
        "author": "释方会",
        "content": "杨歧无旨的，种田博饭吃。\n说梦老瞿昙，何处觅踪迹。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "1dd6313c1a265a05e8a8b464b6125518",
        "title": "偈",
        "author": "释方会",
        "content": "薄福住杨歧，年来气力衰。\n寒风凋败叶，犹喜故人归。\n啰啰哩，拈上死柴头，且向无烟火。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "1d871148458c8446abaa7304068176ef",
        "title": "偈",
        "author": "释方会",
        "content": "杨歧乍住屋壁疏，满床尽布雪真珠。\n缩却项，暗嗟吁，翻忆古人树下居。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "464ebf13f347e1c5f93c79f4910f31c5",
        "title": "偈",
        "author": "释方会",
        "content": "云盖是事不如，说禅似吞栗蒲。\n若向此处会得，佛法天地悬殊。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "4ae5efbe3c812de5f6ea3309df5d38a1",
        "title": "偈",
        "author": "释方会",
        "content": "释迦老子着跌，偷笑云盖乱说。\n虽然世界坦平，也是将勤补拙。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "dfa2e29cbc350888b84d40b543629675",
        "title": "偈",
        "author": "释方会",
        "content": "雪，雪，处处光辉明皎洁。\n黄河冻锁绝纤流，赫日光中须迸裂。\n须迸裂，那咤顶上吃蒺藜，金刚脚下流出血。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "bd97224255a10f4798377ca620976628",
        "title": "句  其一",
        "author": "释方会",
        "content": "渔翁未掷钓，跃鳞衝浪来。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "7e91ce675b0926487da91a30b9f10643",
        "title": "句  其二",
        "author": "释方会",
        "content": "剑为不平离宝匣，药因救病出金瓶。",
        "dynasty": "宋",
        "collection_info": null
    }
]