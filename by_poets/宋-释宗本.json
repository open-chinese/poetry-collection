[
    {
        "uuid": "37a27766a392968850cbb83746bb3f5d",
        "title": "辞众",
        "author": "释宗本",
        "content": "本是无家客，那堪任便游。\n顺风加橹棹，船子下扬州。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "a864fc75c2edefdd465aafedd45bee4c",
        "title": "赋石鼓",
        "author": "释宗本",
        "content": "造化功成难可测，不论劫数莫穷年。\n如今横在孤峰上，解听希声用大千。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "cb73ca1e82dccd37c294cfaff794683c",
        "title": "赠李纲",
        "author": "释宗本",
        "content": "青共立，米去皮。\n此时节，甚光辉。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "6f1748434c9b814837d51188cdeb3089",
        "title": "临终偈  其一",
        "author": "释宗本",
        "content": "百骸溃散寻常事，一物长灵识者稀。\n争似大梅知底意，无声三昧证缘知。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "472e16f242603f6f269180b816590db2",
        "title": "临终偈  其二",
        "author": "释宗本",
        "content": "两年脾疾苦相攻，瘦骨崚嶒鹤足同。\n赖有真常无病者，湛然常在寂光中。",
        "dynasty": "宋",
        "collection_info": null
    }
]