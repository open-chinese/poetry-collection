[
    {
        "uuid": "5d5ef31b1bcf5cb9a623c8f3b1bfa1f2",
        "title": "颂",
        "author": "释善昭",
        "content": "三玄三要事难分，得意忘言道易亲。\n一句明明该万象，重阳九日菊花新。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "f3d5fcba13ae3f2afa1581b89b4a7698",
        "title": "偈",
        "author": "释善昭",
        "content": "胡僧金锡光，为法到汾阳。\n六人成大器，劝请为敷扬。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "36e69f516257c02b7ed6c7ab2c73c7b6",
        "title": "偈",
        "author": "释善昭",
        "content": "汾阳有三诀，衲曾难辨别。\n更拟问如何，拄杖蓦头揳。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "df470698f7aad2540fcdd8da47099b63",
        "title": "第一诀",
        "author": "释善昭",
        "content": "接引无时节，巧语不能诠，云绽青天月。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "d05f07e9e29e737a9b499fb617ad17f6",
        "title": "第二诀",
        "author": "释善昭",
        "content": "舒光辨贤哲，问答利生心，拔却眼中楔。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "9ed8a21a4b453958bfc344af29b93d69",
        "title": "第三诀",
        "author": "释善昭",
        "content": "西国胡人说，济水过新罗，北地用镔铁。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "a44b42e8e9b9c9fe84bc7e442c292769",
        "title": "句  其一",
        "author": "释善昭",
        "content": "万古碧潭空界月，再三捞摝始应知。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "e69d211b1b90e250cdeeb29de3dfe408",
        "title": "句  其二",
        "author": "释善昭",
        "content": "阵云横海上，拔剑搅龙门。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "9fcb1e18a9d4dfc792414c5b81f22882",
        "title": "句  其三",
        "author": "释善昭",
        "content": "三头六臂擎天地，忿怒那咤扑帝钟。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "2d75bf232313f31df143fe7442d49618",
        "title": "句  其四",
        "author": "释善昭",
        "content": "雪埋夜月深三尺，陆地行舟万里程。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "6848c14b5b8c0e57b2ea57f93acaca37",
        "title": "句  其五",
        "author": "释善昭",
        "content": "三玄开正道，一句破邪宗。",
        "dynasty": "宋",
        "collection_info": null
    }
]