[
    {
        "uuid": "f3b40f897136faf5f4e058a1bc200acc",
        "title": "颂",
        "author": "释善昭",
        "content": "三玄三要事难分，得意忘言道易亲。\n一句明明该万象，重阳九日菊花新。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "a8a98a25166a4f632005c6d893e96bd1",
        "title": "偈",
        "author": "释善昭",
        "content": "胡僧金锡光，为法到汾阳。\n六人成大器，劝请为敷扬。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "9dd0a138d6b381a3b3d3c8d4d50cba7c",
        "title": "偈",
        "author": "释善昭",
        "content": "汾阳有三诀，衲曾难辨别。\n更拟问如何，拄杖蓦头揳。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "197309196e5665a787ea9424b1ec0e1d",
        "title": "第一诀",
        "author": "释善昭",
        "content": "接引无时节，巧语不能诠，云绽青天月。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "4c0d6abf04ad8847bc5086b90a8bd2a3",
        "title": "第二诀",
        "author": "释善昭",
        "content": "舒光辨贤哲，问答利生心，拔却眼中楔。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "2c335f8965378d3c93b5d5a6826402dc",
        "title": "第三诀",
        "author": "释善昭",
        "content": "西国胡人说，济水过新罗，北地用镔铁。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "10aaf840878a8271f6667dc52f36d478",
        "title": "句  其一",
        "author": "释善昭",
        "content": "万古碧潭空界月，再三捞摝始应知。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "f76dacb7261cfc321155fb33d408c7bf",
        "title": "句  其二",
        "author": "释善昭",
        "content": "阵云横海上，拔剑搅龙门。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "ca0e1dc69e85b3a8badb9c085cfd1434",
        "title": "句  其三",
        "author": "释善昭",
        "content": "三头六臂擎天地，忿怒那咤扑帝钟。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "2bc3c372fc9bdc214302b689d46b92c0",
        "title": "句  其四",
        "author": "释善昭",
        "content": "雪埋夜月深三尺，陆地行舟万里程。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "7b58eea9247e476e2913309c8d3de764",
        "title": "句  其五",
        "author": "释善昭",
        "content": "三玄开正道，一句破邪宗。",
        "dynasty": "宋",
        "collection_info": null
    }
]