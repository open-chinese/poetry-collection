[
    {
        "uuid": "f19d6fc385e6c10fd507923f5d2b6837",
        "title": "颂古五首  其一",
        "author": "释慧光",
        "content": "雨洗淡红桃蕚嫩，风摇浅碧柳丝轻。\n白云影裏怪石露，绿水光中古木清。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "32e1915b8eb1259ea2aacfbcf40fdb05",
        "title": "颂古五首  其二",
        "author": "释慧光",
        "content": "窣堵古形仪，未举已先知。\n巍然存海底，影落树头辉。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "7f1b5ba8bb8aab25f64aaeef0c66d9e7",
        "title": "颂古五首  其三",
        "author": "释慧光",
        "content": "偷吃油糍，卖弄口觜。\n年老成魔，谩神吓鬼。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "1693a9e1b1e786969cbebcc537ce9352",
        "title": "颂古五首  其四",
        "author": "释慧光",
        "content": "一吹无孔笛，一抚没絃琴。\n一曲两曲无人会，雨过夜塘秋水深。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "5750d42afd286dbf803484c28bd47ab6",
        "title": "颂古五首  其五",
        "author": "释慧光",
        "content": "狗子无佛性，全提摩竭令。\n纔拟犯锋铓，丧却穷性命。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "8489c81c7dcef8eae22157375cc20674",
        "title": "偈",
        "author": "释慧光",
        "content": "不用求真，何须息见，倒骑牛兮入佛殿。\n羌笛一声天地空，不知谁识瞿昙面。",
        "dynasty": "宋",
        "collection_info": null
    }
]