[
    {
        "uuid": "7287e868b82641ae126855aac1e76660",
        "title": "颂古五首  其一",
        "author": "释慧光",
        "content": "雨洗淡红桃蕚嫩，风摇浅碧柳丝轻。\n白云影裏怪石露，绿水光中古木清。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "f505cabcebcb508e8f5e92891899499f",
        "title": "颂古五首  其二",
        "author": "释慧光",
        "content": "窣堵古形仪，未举已先知。\n巍然存海底，影落树头辉。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "25ea6926af21fc6a9d926ca25fb25ad0",
        "title": "颂古五首  其三",
        "author": "释慧光",
        "content": "偷吃油糍，卖弄口觜。\n年老成魔，谩神吓鬼。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "81ae9dd537c6185f97e3df2821c7207d",
        "title": "颂古五首  其四",
        "author": "释慧光",
        "content": "一吹无孔笛，一抚没絃琴。\n一曲两曲无人会，雨过夜塘秋水深。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "89e99c77ba48353c100d8623a0a85453",
        "title": "颂古五首  其五",
        "author": "释慧光",
        "content": "狗子无佛性，全提摩竭令。\n纔拟犯锋铓，丧却穷性命。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "2acd2a0aed86acf7a4efa8a8307a9721",
        "title": "偈",
        "author": "释慧光",
        "content": "不用求真，何须息见，倒骑牛兮入佛殿。\n羌笛一声天地空，不知谁识瞿昙面。",
        "dynasty": "宋",
        "collection_info": null
    }
]