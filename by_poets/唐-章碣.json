[
    {
        "title": "句",
        "author": "章碣",
        "content": "事向无心得。\n（《老学庵笔记》卷四）。",
        "dynasty": "唐",
        "collection_info": null
    },
    {
        "title": "城南偶题",
        "author": "章碣",
        "content": "谁家朱阁道边开，竹拂栏干满壁苔。野水不知何处去，\n可惜登临好光景，五门须听鼓声回。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "赠边将",
        "author": "章碣",
        "content": "千千铁骑拥尘红，去去平吞万里空。宛转龙蟠金剑雪，\n只有河源与辽海，如今全属指麾中。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "桃源",
        "author": "章碣",
        "content": "绝壁相欹是洞门，昔人从此入仙源。数株花下逢珠翠，\n山前空有无情水，犹绕当时碧树村。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "曲江",
        "author": "章碣",
        "content": "日照香尘逐马蹄，风吹浪溅几回堤。无穷罗绮填花径，\n只缘频燕蓬洲客，引得游人去似迷。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "送韦岫郎中典泗州",
        "author": "章碣",
        "content": "玉皇恩诏别星班，去压徐方分野间。有鸟尽巢垂汴柳，\n想忆朝天独吟坐，旋飞新作过秦关。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "赠婺州苏员外",
        "author": "章碣",
        "content": "帝念琼枝欲并芳，星分婺女寄仙郎。鸾从阙下虽辞侣，\n即看龙虎西归去，便佐羲轩活万方。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "寄友人",
        "author": "章碣",
        "content": "谢家山水属君家，曾共持钩掷岁华。竹裏竹鸡眠藓石，\n昨日西风动归思，满船凉叶在天涯。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "雨",
        "author": "章碣",
        "content": "低着烟花漠漠轻，正堪吟坐掩柴扃。乱沾细网垂穷巷，\n霁来还有风流事，重染南山一遍青。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "观锡宴",
        "author": "章碣",
        "content": "倾朝朱紫正骈阗，红杏青莎映广筵。不道楼台无锦绣，\n日暮骅骝相拥去，几人沉醉失金鞭。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "城东即事",
        "author": "章碣",
        "content": "闲寻香陌凤城东，时暂开襟向远风。玉笛一声芳草外，\n回首汉宫烟霭裏，天河金阁未央宫。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "夏日湖上即事寄晋陵萧明府",
        "author": "章碣",
        "content": "亭午羲和驻火轮，开门嘉树庇湖濆。行来宾客奇茶味，\n陶家岂是无诗酒，公退堪惊日已曛。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "对月",
        "author": "章碣",
        "content": "残霞卷尽出东溟，万古难消一片冰。公子踏开香径藓，\n别有洞天三十六，水晶台殿冷层层。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "浙西送杜晦侍御入关",
        "author": "章碣",
        "content": "紫诏征贤发帝聪，绣衣行处扑香风。鹗归秦树幽禽散，\n鞭鞘所拂三千里，多少诸侯合避骢。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "寄江东道友",
        "author": "章碣",
        "content": "野亭歌罢指西秦，避俗争名兴各新。碧带黄麻呈缥缈，\n可惜人间好声势，片帆羸马不相亲。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "下第有怀",
        "author": "章碣",
        "content": "故乡朝夕有人还，欲作家书下笔难。灭烛何曾妨夜坐，\n但使他年遇公道，月轮长在桂珊珊。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "春日经湖上友人别业",
        "author": "章碣",
        "content": "何处狂歌破积愁，携觞共下木兰舟。绿泉溅石银屏湿，\n一年一电逡巡事，不合花前不醉游。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "长安春日",
        "author": "章碣",
        "content": "春日皇家瑞景迟，东风无力雨微微。六宫罗绮同时泊，\n输他得路蓬洲客，红绿山头烂醉归。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "陪浙西王侍郎夜宴",
        "author": "章碣",
        "content": "深锁雷门宴上才，旋看歌舞旋传杯。黄金鸂鶒当筵睡，\n小儒末座频倾耳，只怕城头画角催。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "春别",
        "author": "章碣",
        "content": "掷下离觞指乱山，趋程不待凤笙残。花边马嚼金衔去，\n殷勤莫厌貂裘重，恐犯三边五月寒。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "送谢进士还闽",
        "author": "章碣",
        "content": "百越风烟接巨鳌，还乡心壮不知劳。雷霆入地建溪险，\n名场声利喧喧在，莫向林泉改鬓毛。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "焚书坑",
        "author": "章碣",
        "content": "竹帛烟销帝业虚，关河空锁祖龙居。\n坑灰未冷山东乱，刘项元来不读书。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "东都望幸",
        "author": "章碣",
        "content": "懒修珠翠上高台，眉月连娟恨不开。\n纵使东巡也无益，君王自领美人来。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "旅舍早起",
        "author": "章碣",
        "content": "迹暗心多感，神疲梦不游。惊舟同厌夜，独树对悲秋。\n晚角和人战，残星入汉流。门前早行子，敲镫唱离忧。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "癸卯岁毗陵登高会中贻同志",
        "author": "章碣",
        "content": "流落常嗟胜会稀，故人相遇菊花时。凤笙龙笛数巡酒，\n长杨羽猎须留本，开济重为阙下期。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "上元夜建元寺观灯呈智通上人",
        "author": "章碣",
        "content": "建元看别上元灯，处处回廊斗火层。珠玉乱抛高殿佛，\n无限喧阗留不得，月华西下露华凝。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    },
    {
        "title": "《变体诗",
        "author": "章碣",
        "content": "东南路尽吴江畔，正是穷愁暮雨天。鸥鹭不嫌斜两岸，\n今古若论英达算，鸱夷高兴固无边。",
        "dynasty": "唐",
        "collection_info": {
            "collection": "御定全唐诗",
            "volume": "卷六百六十九"
        }
    }
]