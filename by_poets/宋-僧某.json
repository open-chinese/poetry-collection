[
    {
        "uuid": "cdc39ffce3ace01dc81b6ca58336ee8e",
        "title": "解夏小参问无准禅师",
        "author": "僧某",
        "content": "选佛场开日，丛林气象新。\n心空及第者，毕竟是何人。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "f7c78606cb8972d219a2f96e63edd4d5",
        "title": "偈  其一",
        "author": "僧某",
        "content": "荏苒光阴岁月寒，禅家赢得共盘桓。\n个中消息无人会，愿闻提唱祖师关。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "3ae16d7735a3243e13295da3bd189cf3",
        "title": "偈  其二",
        "author": "僧某",
        "content": "弥勒真弥勒，分身千百亿。\n时时示世人，世人俱不识。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "5e1a57991f3021cded435b38c871c195",
        "title": "问怀秀禅师",
        "author": "僧某",
        "content": "昔日沩山水牯牛，自从放去绝踪由。\n今朝幸遇师登座，未审时人何处求。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "c5b91e5c9b239a2abe6794f032c7147e",
        "title": "以偈问文准禅师",
        "author": "僧某",
        "content": "寒食因悲郭外春，墅田无处不伤神。\n林间垒垒添新冢，半是去年来哭人。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "9733d7f9c58f1e88670211a6847227b9",
        "title": "偈",
        "author": "僧某",
        "content": "因山见水，见水忘山。\n山水俱忘，理归何所。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "98dea7eb916dab5d0a4ef89018d54c4c",
        "title": "以偈问清远禅师",
        "author": "僧某",
        "content": "劫火威音前，别是一壶天。\n御楼前射猎，不是刈荒田。",
        "dynasty": "宋",
        "collection_info": null
    },
    {
        "uuid": "a047416acc1c1e65630dda3d04b99204",
        "title": "偈",
        "author": "僧某",
        "content": "一水吞空远，三峰峭壁危。\n猊台重拂拭，共喜主人归。",
        "dynasty": "宋",
        "collection_info": null
    }
]